<Window x:Class="AdminClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AdminClientWpf.ViewModels"
        Title="DnD Admin • Login"
        Width="520" Height="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <Border CornerRadius="24" Background="{StaticResource Bg0Brush}" BorderBrush="#3B2A55" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="16" LastChildFill="True" MouseLeftButtonDown="WindowDrag">
                    <TextBlock Text="⚔ DnD Tool • Admin" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource SubTextBrush}"/>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="—" Width="40" Margin="8,0,0,0" Command="{Binding MinimizeCommand}"/>
                        <Button Content="✕" Width="40" Margin="8,0,0,0" Command="{Binding CloseCommand}"/>
                    </StackPanel>
                </DockPanel>

                <Grid Grid.Row="1" Margin="28">
                    <Border x:Name="Card"
                            CornerRadius="22"
                            Background="{StaticResource CardBrush}"
                            BorderBrush="#3B2A55"
                            BorderThickness="1"
                            Padding="28"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="CardScale" ScaleX="0.98" ScaleY="0.98"/>
                        </Border.RenderTransform>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Admin login" Style="{StaticResource TitleText}"/>
                            <TextBlock Grid.Row="1" Margin="0,8,0,0" Foreground="{StaticResource SubTextBrush}"
                                       Text="Only Admin accounts can access the dashboard."/>

                            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                                <TextBlock Text="Email" Style="{StaticResource HintText}"/>
                                <TextBox Margin="0,8,0,0"
                                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Margin="0,16,0,0">
                                <TextBlock Text="Password" Style="{StaticResource HintText}"/>
                                <PasswordBox x:Name="Pwd" Margin="0,8,0,0" Padding="12,10"
                                             Background="{StaticResource Bg1Brush}"
                                             BorderBrush="#3B2A55" BorderThickness="1"
                                             PasswordChanged="PasswordChanged"/>
                            </StackPanel>

                            <TextBlock Grid.Row="4" Margin="0,16,0,0"
                                       Foreground="{StaticResource DangerBrush}"
                                       Text="{Binding ErrorMessage}"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <StackPanel Grid.Row="5" VerticalAlignment="Bottom">
                                <Button Content="{Binding ButtonText}"
                                        Height="46"
                                        IsDefault="True"
                                        Command="{Binding LoginCommand}"
                                        IsEnabled="{Binding CanLogin}"/>
                                <Border Margin="0,14,0,0" CornerRadius="12" Background="{StaticResource Bg1Brush}" BorderBrush="#3B2A55" BorderThickness="1" Padding="12">
                                    <TextBlock Foreground="{StaticResource SubTextBrush}" TextWrapping="Wrap"
                                               Text="Tip: csak Admin role-lal fog menni az /api/admin/*. Login után a token a gépen titkosítva lesz tárolva."/>
                                </Border>
                            </StackPanel>

                            <TextBlock Grid.Row="6" Margin="0,16,0,0" Style="{StaticResource HintText}" TextAlignment="Center"
                                       Text="© DnD Tool • Admin Client (WPF)"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <Grid.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="Card"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.35"/>
                        <DoubleAnimation Storyboard.TargetName="CardScale"
                                         Storyboard.TargetProperty="ScaleX"
                                         From="0.96" To="1.0" Duration="0:0:0.35"/>
                        <DoubleAnimation Storyboard.TargetName="CardScale"
                                         Storyboard.TargetProperty="ScaleY"
                                         From="0.96" To="1.0" Duration="0:0:0.35"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>
