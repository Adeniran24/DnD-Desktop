<Window x:Class="AdminClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AdminClientWpf.ViewModels"
        Title="DnD Admin • Login"
        Width="980" Height="560"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <!-- Backdrop -->
        <Border CornerRadius="22" Background="{StaticResource Bg0Brush}" BorderBrush="#3B2A55" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="420" />
                </Grid.ColumnDefinitions>

                <!-- Left: fantasy panel -->
                <Border Grid.Column="0" CornerRadius="22,0,0,22" Background="{StaticResource Bg1Brush}">
                    <Grid Margin="28">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" LastChildFill="True" MouseLeftButtonDown="WindowDrag">
                            <TextBlock Text="⚔ DnD Tool • Admin" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource SubTextBrush}"/>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="—" Width="44" Margin="8,0,0,0" Command="{Binding MinimizeCommand}"/>
                                <Button Content="✕" Width="44" Margin="8,0,0,0" Command="{Binding CloseCommand}"/>
                            </StackPanel>
                        </DockPanel>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource TitleText}" Text="Welcome back, Dungeon Master."/>
                            <TextBlock Margin="0,10,0,0" Foreground="{StaticResource SubTextBrush}" FontSize="14"
                                       Text="Sign in to open the admin dashboard. This client is restricted to Admin users only."/>
                            <Border Margin="0,26,0,0" CornerRadius="18" Background="#140C1E" BorderBrush="#3B2A55" BorderThickness="1" Padding="18">
                                <TextBlock Foreground="{StaticResource SubTextBrush}" TextWrapping="Wrap"
                                           Text="Tip: csak Admin role-lal fog menni az /api/admin/*. Login után a token a gépen titkosítva lesz tárolva."/>
                            </Border>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Style="{StaticResource HintText}" Text="© DnD Tool • Admin Client (WPF)"/>
                    </Grid>
                </Border>

                <!-- Right: login card -->
                <Grid Grid.Column="1" Margin="22">
                    <Border x:Name="Card"
                            CornerRadius="20"
                            Background="{StaticResource CardBrush}"
                            BorderBrush="#3B2A55"
                            BorderThickness="1"
                            Padding="22"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="CardScale" ScaleX="0.98" ScaleY="0.98"/>
                        </Border.RenderTransform>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Sign in" Style="{StaticResource TitleText}"/>
                            <TextBlock Grid.Row="1" Margin="0,6,0,0" Foreground="{StaticResource SubTextBrush}"
                                       Text="Enter your credentials to continue."/>

                            <StackPanel Grid.Row="2" Margin="0,18,0,0">
                                <TextBlock Text="Email" Style="{StaticResource HintText}"/>
                                <TextBox Margin="0,6,0,0"
                                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Margin="0,14,0,0">
                                <TextBlock Text="Password" Style="{StaticResource HintText}"/>
                                <PasswordBox x:Name="Pwd" Margin="0,6,0,0" Padding="12,10"
                                             Background="{StaticResource Bg1Brush}"
                                             BorderBrush="#3B2A55" BorderThickness="1"
                                             PasswordChanged="PasswordChanged"/>
                            </StackPanel>

                            <TextBlock Grid.Row="4" Margin="0,14,0,0"
                                       Foreground="{StaticResource DangerBrush}"
                                       Text="{Binding ErrorMessage}"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <StackPanel Grid.Row="5" VerticalAlignment="Bottom">
                                <Button Content="{Binding ButtonText}"
                                        Height="44"
                                        Command="{Binding LoginCommand}"
                                        IsEnabled="{Binding CanLogin}"/>
                                <TextBlock Margin="0,12,0,0" Style="{StaticResource HintText}" TextWrapping="Wrap"
                                           Text="A token 12 óráig él (backend: Expires=UtcNow+12h)."/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Startup animation -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="Card"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.35"/>
                        <DoubleAnimation Storyboard.TargetName="CardScale"
                                         Storyboard.TargetProperty="ScaleX"
                                         From="0.96" To="1.0" Duration="0:0:0.35"/>
                        <DoubleAnimation Storyboard.TargetName="CardScale"
                                         Storyboard.TargetProperty="ScaleY"
                                         From="0.96" To="1.0" Duration="0:0:0.35"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>
